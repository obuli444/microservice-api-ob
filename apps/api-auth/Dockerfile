# Build the docker image with `npx nx docker-build api-auth`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t api-auth`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system api-auth && \
          adduser --system -G api-auth api-auth

COPY dist/apps/api-auth api-auth
RUN chown -R api-auth:api-auth .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix api-auth --omit=dev -f install

CMD [ "node", "api-auth" ]
