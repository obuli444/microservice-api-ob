{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ccl-dopz-api/app-interface": [
        "libs/interfaces/app-interface/src/index.ts"
      ],
      "@ccl-dopz-api/constants": ["libs/core/constants/src/index.ts"],
      "@ccl-dopz-api/logger": ["libs/core/logger/src/index.ts"],
      "@ccl-dopz-api/server": ["libs/core/server/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
